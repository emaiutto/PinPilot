<UserControl x:Class="MauiSoft.SRP.Gauges.C172.VerticalSpeed"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MauiSoft.SRP.Gauges.C172"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100" >
    <Grid>
        <Image x:Name="back" Source="/MauiSoft.SRP.Gauges;component/Resources/c172_vs_frame.png" Panel.ZIndex="0"/>

        <Image x:Name="needle" HorizontalAlignment="Left" VerticalAlignment="Center" Source="/MauiSoft.SRP.Gauges;component/Resources/c172_vs_needle.png" RenderTransformOrigin="0.5,0.5" Panel.ZIndex="1"  >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

