<UserControl x:Class="MauiSoft.SRP.Gauges.Generics.Wind"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MauiSoft.SRP.Gauges.Generics"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100" SizeChanged="UserControl_SizeChanged">

    <Grid Style="{DynamicResource GridStyle1}" x:Name="tile" Background="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" >
        <Image x:Name="image" HorizontalAlignment="Left" Margin="40,40,40,40" VerticalAlignment="Center" Stretch="Fill" OpacityMask="#FFF4F7FC" />
        <Label Style="{DynamicResource  LabelStyle}" x:Name="label" Content="000° @ 00 kts" HorizontalAlignment="Center" Margin="0,67,0,0" VerticalAlignment="Bottom" Background="{x:Null}" FontSize="10" />
    </Grid>
    
</UserControl>
