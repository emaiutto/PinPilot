<Window x:Class="Discovery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Discovery"
        mc:Ignorable="d"
        Title="HID Discovery Panel" Height="476" Width="836" Background="#FFB3E6DE" WindowState="Maximized">
    <ScrollViewer>
        <StackPanel x:Name="MainPanel" Margin="10">
            <TextBlock Text="Botones:" FontWeight="Bold" FontSize="14"/>
            <WrapPanel x:Name="ButtonsPanel" Margin="0,5"/>

            <TextBlock Text="Ejes:" FontWeight="Bold" FontSize="14" Margin="0,10,0,0"/>
            <StackPanel x:Name="AxesPanel" Orientation="Vertical" Margin="0,5"/>
             

            <TextBox x:Name="Result" Text="Texto a copiar" IsReadOnly="True" BorderThickness="1" Background="Transparent" IsReadOnlyCaretVisible="False" Margin="0,10,0,0" BorderBrush="Black" SelectionOpacity="0.5"/>


            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Viewbox Stretch="Uniform" Margin="5">
                    <Canvas x:Name="XPlotCanvas" Background="Black" Width="200" Height="200"/>
                </Viewbox>

                <Viewbox Stretch="Uniform" Grid.Column="1" Margin="5">
                    <Canvas x:Name="YPlotCanvas" Background="Black" Width="200" Height="200"/>
                </Viewbox>

                <Viewbox Stretch="Uniform" Grid.Column="2" Margin="5">
                    <Canvas x:Name="ZPlotCanvas" Background="Black" Width="200" Height="200"/>
                </Viewbox>
            </Grid>



        </StackPanel>
    </ScrollViewer>
</Window>
