<UserControl x:Class="MAUI.PinPilot.Gauges.PMDG.B737_STAB_TRIM"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MAUI.PinPilot.Gauges.PMDG"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100" >
    <Grid Background="Black">
        <Image x:Name="back" Source="/MAUI.PinPilot.Gauges;component/Resources/B737_STAB_TRIM.png" Panel.ZIndex="0" />

        <Image x:Name="needle" HorizontalAlignment="Left" VerticalAlignment="Center" Source="/MAUI.PinPilot.Gauges;component/Resources/B737_STAB_TRIM_NEEDLE.png" RenderTransformOrigin="0.5,0.5" Panel.ZIndex="1" Height="10" Margin="28,0,0,0" Width="10"  >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform Y="0"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <!--<Label Style="{DynamicResource LabelStyleNumbers}" x:Name="value" Content="Value" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Bottom" >
            <Label.Effect>
                <DropShadowEffect/>
            </Label.Effect>
        </Label>-->

    </Grid>

</UserControl>
