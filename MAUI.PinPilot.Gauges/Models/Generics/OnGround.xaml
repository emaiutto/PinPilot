<UserControl x:Class="MAUI.PinPilot.Gauges.Generics.OnGround"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MAUI.PinPilot.Gauges.Generics"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100"  >

    <Grid Style="{DynamicResource GridStyle1}" x:Name="tile" Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"  >
        <Image x:Name="image" HorizontalAlignment="Left" Margin="2,2,2,2" VerticalAlignment="Top" Stretch="Fill"/>
        <Label Style="{DynamicResource LabelStyle}" x:Name="label" Content="Label" HorizontalAlignment="Center" Margin="0,67,0,0" VerticalAlignment="Bottom" Background="{x:Null}" />
    </Grid>

</UserControl>
