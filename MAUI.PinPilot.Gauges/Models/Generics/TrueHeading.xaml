<UserControl x:Class="MAUI.PinPilot.Gauges.Generics.TrueHeading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MAUI.PinPilot.Gauges.Generics"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100"  >
    
    <Grid Style="{DynamicResource GridStyle1}" Background="#FF2D9A30">
        <Label Style="{DynamicResource LabelStyle}" x:Name="title" Content="Title" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" />
        <Label Style="{DynamicResource LabelStyleNumbers}" x:Name="value" Content="Value" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Center" />
    </Grid>
    
</UserControl>
