<UserControl x:Class="MAUI.PinPilot.Gauges.Generics.CurrentAirport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MAUI.PinPilot.Gauges.Generics"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    
    <Grid Style="{DynamicResource GridStyle1}" Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}">
        <Label Style="{DynamicResource LabelStyle}" x:Name="label" Content="ICAO" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Label.Effect>
                <DropShadowEffect/>
            </Label.Effect>
        </Label>
    </Grid>

</UserControl>
